@model Project.Models.Programs

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Programs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach)
        </dt>
        <dd class="col-sm-10">
            @if (Model.CoachId != null)
            {
                <a asp-controller="Coaches" asp-action="Details" asp-route-id="@Model.CoachId">@Html.DisplayFor(model => model.Coach.FullName)</a>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <dd>
            @foreach (var client in Model.Enrollments)
            {
                <a asp-controller="Clients" asp-action="Details" asp-route-id="@client.ClientId">
                    @client.Client.FullName
                </a> <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
